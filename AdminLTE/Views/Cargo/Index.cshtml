
@{
    ViewBag.Title = "Index";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Cargo
        <small>Index</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Home"><i class="fa fa-home"></i> Home</a></li>
        <li class="active">Index</li>
    </ol>
</section>
<!-- Main content -->
<section class="content" ng-app="app" ng-controller="CargoControllerIndex">
    <div class="row">
        <div class="col-xs-1">
            <button class="btn btn-primary" ng-click="Novo()">
                <span class="fa fa-check-circle-o" aria-hidden="true"></span> Novo
            </button>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-xs-12">
            <div class="input-group">
                <input type="text" class="form-control input-sm pull-right" placeholder="Pesquise..." ng-model="cargo.pesquisa" />
                <div class="input-group-btn">
                    <button class="btn btn-sm btn-default">
                        <i class="fa fa-search"></i>
                    </button>
                </div>
            </div>
            <br />
            <div class="box" ng-show="resultado.length > 0">
                <div class="box-body">
                    <table class="table table-bordered">
                        <tr>
                            <th>CBO</th>
                            <th>Ocupação</th>
                            <th style="text-align: right">Ações</th>
                        </tr>
                        <tr dir-paginate="item in Cargos | filter: cargo.pesquisa | itemsPerPage: 4 as resultado" ng-dblclick="Editar(item.ID)">
                            <td>{{item.Codigo}}</td>
                            <td>{{item.Ocupacao}}</td>
                            <td style="text-align: right">
                                <button type="button" class="btn btn-warning" ng-click="Editar(item.ID)"><span class="fa fa-pencil"></span></button>
                                <button type="button" class="btn btn-danger" ng-click="Excluir(item.ID)"><span class="fa fa-trash"></span></button>
                            </td>
                        </tr>
                    </table>
                    <div style="text-align: right">
                        <dir-pagination-controls></dir-pagination-controls>
                    </div>
                </div>
            </div>
            <div class="alert alert-warning" ng-show="resultado.length == 0">
                <label><strong>Nenhum Cargo encontrado!</strong></label>
            </div>
        </div>
    </div>
</section>

